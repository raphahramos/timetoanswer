<div>
  <a class="hiddenanchor" id="signup"></a>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Cadastrar-se</h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder:"E-mail", class:"form-control" %>
         </div>
         <div >
            <%= f.password_field :password, placeholder:"Password", class:"form-control" %>
          </div>
           <div >
            <%= f.password_field :password_confirmation, placeholder:"ConfirmaÃ§Ã£o Password", class:"form-control" %>
          </div>
          <div >
              <%= f.submit "Cadastrar-se",class:"btn btn-default submit", style:"float: none; margin-left: 0px;width: 50%" %>
          </div>

          <div class="clearfix"></div>
          
          <div class="separator"></div>
        </form>
      </section>
    </div>
  </div>
</div><% end %>