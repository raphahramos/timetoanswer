<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h1>Login</h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder:"E-mail", class:"form-control" %>
         </div>
         <div >
            <%= f.password_field :password, placeholder:"Password", class:"form-control" %>
          </div>
          <div >
              <%= f.submit "Entrar",class:"btn btn-default submit", style:"float: none; margin-left: 0px;width: 50%" %>
              <%= link_to 'Esqueceu sua Senha?', new_user_password_path, class:"reset_pass" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator"></div>
        </form>
      </section>
    </div>
  </div>
</div>
<% end %>
